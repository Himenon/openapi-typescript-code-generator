{
  "name": "@himenon/node-lib-template",
  "version": "0.0.7",
  "private": true,
  "description": "node library template",
  "keywords": [
    "template",
    "proxy directory",
    "typescript"
  ],
  "homepage": "https://github.com/Himenon/node-lib-template#readme",
  "bugs": {
    "url": "https://github.com/Himenon/node-lib-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Himenon/node-lib-template.git"
  },
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "sideEffects": false,
  "main": "lib/$cjs/index.js",
  "module": "lib/$esm/index.js",
  "types": "lib/$types/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "scripts": {
    "build": "yarn ts ./scripts/build.ts",
    "clean": "yarn ts ./scripts/clean.ts",
    "format:code": "prettier \"**/*.{js,jsx,ts,tsx,json,yml,yaml,md,html}\" --write",
    "format:yarn:lock": "yarn-deduplicate yarn.lock --strategy highest",
    "lerna:version:up": "lerna version --yes",
    "release:github:registry": "yarn publish --registry https://npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}",
    "release:npm:registry": "yarn publish",
    "test": "run-s test:depcruise test:jest",
    "test:depcruise": "depcruise --validate .dependency-cruiser.js src",
    "test:jest": "jest -c ./jest.config.js",
    "ts": "ts-node -P tsconfig.build.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "kind-of": "6.0.3",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.7",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "cherry-pick": "0.5.0",
    "conventional-changelog-angular-all": "1.7.0",
    "cpy": "8.1.1",
    "dependency-cruiser": "9.17.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "execa": "4.1.0",
    "generate-changelog": "1.8.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "sort-package-json": "1.46.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.0.0",
    "typescript": "4.0.5",
    "yarn-deduplicate": "3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
